<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <!-- 定义变量: var i -->

        <variable
            name="user"
            type="viewdata.UserViewData"
            />

        <variable
            name="other"
            type="viewdata.OtherViewData"
            />

        <variable
            name="ignore"
            ignore="true"
            type="kale.db.ignore.IgnoreViewData"
            />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="kale.db.MainActivity"
        >

        <LinearLayout
            android:id="@+id/user_info_ll"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@{user.pic , default= @drawable/saber}"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e2e5ea"
                android:drawablePadding="10dp"
                android:drawableRight="@{user.right}"
                android:gravity="center"
                android:text="@{user.name , default = saber}"
                android:textSize="30sp"
                />

        </LinearLayout>
        
        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/news_item"
            />

    </LinearLayout>
</layout>